<% if obj.errors.any? %>
  <div class="row form-errors">
    <div class="col-lg-12 col-md-12 col-sm-12 col-cs-12 alert alert-warning">
      <h4>Please correct the following errors:</h4>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

